{
  "name": "@codemirror/lang-json",
  "version": "6.0.1",
  "description": "JSONC language support for the CodeMirror code editor",
  "scripts": {
    "test": "cm-runtests",
    "prepare": "cm-buildhelper src/json.ts",
    "build-readme": "builddocs  --main src/README.md --format markdown src/json.ts > README.md"
  },
  "keywords": [
    "editor",
    "code"
  ],
  "author": {
    "name": "Nikolay Leonov",
    "email": "cocacola89@live.ru"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "sideEffects": false,
  "license": "MIT",
  "dependencies": {
    "@codemirror/language": "^6.0.0",
    "@codemirror/lint": "^6.8.5",
    "@codemovie/grammar-json-with-comments": "^1.0.3"
  },
  "devDependencies": {
    "@codemirror/buildhelper": "^1.0.0",
    "builddocs": "^1.0.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cocacola89/codemirror-lang-jsonc"
  }
}
